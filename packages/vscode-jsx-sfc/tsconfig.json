{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "outDir": "out",
    "lib": ["es2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "noUnusedParameters": false,
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["node_modules", ".vscode-test", "src/**/__tests__"]
}
